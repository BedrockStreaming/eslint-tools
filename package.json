{
  "description": "Bedrock Streaming's ESLint packages",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier-eslint --write '**/*.{js,json,md,yml}'",
    "prepare": "husky install"
  },
  "resolutions": {
    "lodash": "4.17.12",
    "lodash.merge": "4.6.2",
    "mixin-deep": "2.0.1",
    "set-value": "3.0.1",
    "js-yaml": "3.13.1",
    "handlebars": "4.5.3"
  },
  "devDependencies": {
    "husky": "7.0.2",
    "lerna": "3.14.0",
    "lint-staged": "11.2.3"
  },
  "prettier": "@bedrockstreaming/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,json,md,yml}": [
      "prettier-eslint --write --ignore-unknown",
      "git add"
    ]
  }
}
