{
  "description": "Bedrock Streaming's ESLint packages",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write --ignore-unknown '**/*'",
    "format-check": "prettier --check --ignore-unknown '**/*'",
    "prepare": "husky install"
  },
  "resolutions": {
    "lodash": "4.17.12",
    "lodash.merge": "4.6.2",
    "mixin-deep": "2.0.1",
    "set-value": "3.0.1",
    "js-yaml": "3.13.1",
    "handlebars": "4.5.3"
  },
  "devDependencies": {
    "husky": "7.0.2",
    "lerna": "3.22.1",
    "lint-staged": "12.3.1",
    "typescript": "4.5.4"
  },
  "prettier": "@bedrockstreaming/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,json,md,yml}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
